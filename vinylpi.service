[Unit]
Description=VinylPi - Last.fm Vinyl Record Scrobbler
After=network.target sound.target
Wants=network.target sound.target

[Service]
ExecStart=/usr/bin/python3 vinylpi-web/backend/main.py
WorkingDirectory=/home/rabreu/VinylPi
StandardOutput=append:/var/log/vinylpi.log
StandardError=append:/var/log/vinylpi.error.log
Restart=always
RestartSec=10
StartLimitInterval=0
User=rabreu
Environment=PYTHONUNBUFFERED=1

[Install]
WantedBy=multi-user.target
